<!DOCTYPE html>
<html>

<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/css/materialize.min.css" media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>PCSO Lottery Checker</title>
</head>

<body>
    <div class="container">
        <h1><%= type %></h1>

        <div class="row">
            <%
                let cssStyle = {
                    "winning": {
                        true: "green",
                        false: "red"
                    }
                };
            %>
            <% results.forEach((data) => { %>
                <div class="col s6">
                    <% if (data.winning && data.outOfBounds) { %>
                        <div class="card hoverable white-text blue">
                    <% } else { %>
                        <div class="card hoverable white-text <%= cssStyle['winning'][data.winning] %>">
                    <% } %>
                        <div class="card-content">
                            <p>Draw Date: <%= data.drawDate %></p>
                            <p>Numbers: <%= data.numbers %></p>
                            <p>Matching Numbers: <%= data.match.join(", ") %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <script type="text/javascript" src="/js/materialize.min.js"></script>
</body>

</html>